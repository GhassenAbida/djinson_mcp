{
    "name": "djinson/openai-mcp",
    "description": "Azure OpenAI 4.1 / MCP integration for Laravel.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Djinson Consulting Group",
            "email": "support@djinson.tn"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0",
        "spatie/laravel-package-tools": "^1.16",
        "laravel/laravel": "^11.6"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Djinson\\OpenAiMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Djinson\\OpenAiMcp\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Djinson\\OpenAiMcp\\OpenAiMcpServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
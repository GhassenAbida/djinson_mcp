{
    "name": "djinson/laravel-mcp",
    "description": "The ultimate Laravel integration for Model-Centric Processing (MCP). Seamlessly connect Azure OpenAI, OpenAI, and Google Gemini to build powerful AI agents with tool use, conversation orchestration, and robust error handling.",
    "keywords": [
        "laravel",
        "ai",
        "mcp",
        "openai",
        "azure",
        "gemini",
        "llm",
        "agent",
        "tool-use",
        "chatgpt",
        "artificial-intelligence",
        "sdk"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Djinson Consulting Group",
            "email": "support@djinson.tn",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Djinson\\OpenAiMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Djinson\\OpenAiMcp\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Djinson\\OpenAiMcp\\LaravelMcpServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}